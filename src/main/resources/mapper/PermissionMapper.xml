  <select id="findList" parameterType="com.coffeewx.model.Permission" resultMap="BaseResultMap">
    SELECT * FROM sys_permission t
    WHERE 1=1
  </select>

  <select id="findListByRoleId" parameterType="java.lang.String" resultMap="BaseResultMap">
    SELECT
    t2.*
    FROM
    sys_role_permission t
    LEFT JOIN sys_permission t2 ON t.permission_id = t2.id
    WHERE
    t.role_id = #{id}
  </select>

  <select id="listTreePermission" parameterType="com.coffeewx.model.Permission" resultMap="BaseResultMap">
    SELECT * FROM sys_permission t
    WHERE 1=1
  </select>

